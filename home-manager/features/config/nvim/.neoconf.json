{
  "neodev": {
    "library": {
      "enabled": true,
      "plugins": false
    }
  },
  "neoconf": {
    "plugins": {
      "lua_ls": {
        "enabled": true
      },
      "lspconfig": {
        "enabled": true
      }
    }
  },
  "lspconfig": {
    "lua_ls": {
      "Lua": {
        "workspace": {
          "checkThirdParty": false
        },
        "format": {
          "enable": false,
        },
        "completion": {
          "showWord": "Disable",
        },
        "diagnostics": {
          "globals": [ "vim" ]
        },
        "hint": {
          "enable" : true,
          "setType" : true,
          "arrayIndex" : "Disable",
          "await" : true,
          "paramName" : "All",
          "paramType" : true,
          "semicolon" : "SameLine"
        }
      }
    }
  }
}
