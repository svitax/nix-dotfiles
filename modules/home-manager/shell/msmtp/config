	defaults
	auth on
	protocol smtp
	tls on
	tls_starttls on

	account gmail
	host smtp.gmail.com
	port 587
	eval echo from $(pass show gmail-mbsync | grep '^Username:' | cut -d' ' -f2-)
	eval echo user $(pass show gmail-mbsync | grep '^Username:' | cut -d' ' -f2-)
	passwordeval "pass show gmail-mbsync | head -n1"

	account default : gmail