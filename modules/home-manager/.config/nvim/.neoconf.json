{
    "neodev": {
        "library": {
            "enabled": true,
            "plugins": false
        }
    },
    "neoconf": {},
    "lspconfig": {
        "jsonls": {
            "json": {
                "format": {
                    "enable": true
                },
                "validate": {
                    "enable": true
                }
            }
        },
        "yamlls": {
            "redhat.telemetry.enabled": false,
            "yaml": {
                "keyOrdering": false,
                "format": {
                    "enable": true
                },
                "validate": true,
                "schemaStore": {
                    // Must disable builtin schemaStore support to use schemas from schemastore.nvim plugin
                    "enable": false,
                    // Avoid TypeError: Cannot read properties of undefined (reading 'length')
                    "url": ""
                }
            }
        },
        "lua_ls": {
            "Lua": {
                "runtime": {
                    "version": "LuaJIT"
                },
                "workspace": {
                    "checkThirdParty": "Disable"
                },
                "format": {
                    "enable": false
                },
                "completion": {
                    "showWord": "Disable"
                },
                "diagnostics": {
                    "globals": [
                        "vim",
                        "describe",
                        "it",
                        "assert",
                        "stub"
                    ],
                    "disable": [
                        "duplicate-set-field"
                    ]
                },
                "telemetry": {
                    "enable": false
                },
                "hint": { // inlay hints
                    "enable": true,
                    "setType": true,
                    "arrayIndex": "Disable",
                    "await": true,
                    "paramName": "All",
                    "paramType": true,
                    "semicolon": "SameLine"
                }
            }
        }
    }
}
